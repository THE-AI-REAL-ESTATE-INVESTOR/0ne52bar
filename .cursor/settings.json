{
  "editor": {
    "formatOnSave": true,
    "tabSize": 2,
    "insertSpaces": true,
    "rulers": [100],
    "wordWrap": "on",
    "bracketPairColorization": true,
    "guides": {
      "bracketPairs": true,
      "indentation": true
    }
  },
  "typescript": {
    "preferences": {
      "importModuleSpecifier": "non-relative",
      "quotePreference": "single"
    }
  },
  "files": {
    "exclude": {
      "**/node_modules": true,
      "**/.git": true,
      "**/dist": true,
      "**/.next": true,
      "**/build": true,
      "**/.turbo": true,
      "**/coverage": true
    }
  },
  "search": {
    "exclude": {
      "**/node_modules": true,
      "**/dist": true,
      "**/.next": true,
      "**/build": true,
      "**/.turbo": true,
      "**/coverage": true
    }
  },
  "terminal": {
    "integrated": {
      "shell": {
        "osx": "/bin/zsh"
      }
    }
  },
  "workbench": {
    "colorCustomizations": {
      "editorError.foreground": "#ff6b6b",
      "editorWarning.foreground": "#ffd93d",
      "editorInfo.foreground": "#6bff6b"
    }
  },
  "git": {
    "enabled": true,
    "autofetch": true,
    "confirmSync": false
  },
  "files.associations": {
    "*.prisma": "prisma",
    "*.tsx": "typescriptreact",
    "*.ts": "typescript"
  },
  "prisma": {
    "formatOnSave": true
  },
  "tailwindCSS": {
    "version": "4",
    "emmetCompletions": true,
    "validate": true
  },
  "nextjs": {
    "validate": true
  },
  "mermaid": {
    "preview": true
  },
  "ai": {
    "enabled": true,
    "model": "claude-3-7-sonnet",
    "temperature": 0.7,
    "maxTokens": 2000,
    "contextWindow": 8000
  },
  "ai.prompts": {
    "codeReview": "Review this code for best practices, performance, and potential issues",
    "documentation": "Generate comprehensive documentation for this code",
    "test": "Generate unit tests for this code",
    "refactor": "Suggest improvements for this code"
  },
  "ai.features": {
    "codeCompletion": true,
    "codeReview": true,
    "documentation": true,
    "refactoring": true,
    "testing": true
  },
  "ai.context": {
    "includeComments": true,
    "includeImports": true,
    "includeTypes": true
  },
  "ai.linting": {
    "enabled": true,
    "autoFix": true,
    "showInline": true
  },
  "ai.formatting": {
    "enabled": true,
    "autoFormat": true,
    "formatOnSave": true
  },
  "ai.documentation": {
    "enabled": true,
    "autoGenerate": true,
    "includeExamples": true,
    "includeTypes": true
  },
  "ai.testing": {
    "enabled": true,
    "autoGenerate": true,
    "includeEdgeCases": true
  },
  "ai.refactoring": {
    "enabled": true,
    "suggestImprovements": true,
    "autoApply": false
  },
  "ai.codeReview": {
    "enabled": true,
    "checkBestPractices": true,
    "checkPerformance": true,
    "checkSecurity": true
  }
} 